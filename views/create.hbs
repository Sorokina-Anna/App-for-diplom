<form action = "/create" method="POST">
<h2>Создать задание</h2>

<div class = "input-field">
    <input name="task" type="text" class = "field" placeholder="Название задания">
    <p>Дата и время начала задачи</p>
    <input name="starttime" type="datetime-local" class = "time">
    <p>Дата и время конца задачи</p>
    <input name="endtime" type="datetime-local" class = "time">
    <button type="submit" class="btn">Создать</button>
</div>
</form>

